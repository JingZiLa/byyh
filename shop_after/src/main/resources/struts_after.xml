<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
    "http://struts.apache.org/dtds/struts-2.5.dtd"><!-- 注意版本 -->
<struts>
	<constant name="struts.enable.DynamicMethodInvocation"
		value="true" />
	<!-- 配置Struts2中所上传的文件的总大小 -->
	<constant name="struts.multipart.maxSize" value="5242880" />
	<!-- 小程序后台Action配置 -->
	<package name="shop" extends="struts-default" namespace="/"
		strict-method-invocation="false">
		<!-- 配置用户:UserAction -->
		<action name="user_*" class="UserAction" method="{1}">
			<result name="success">/H-ui.admin/index.jsp</result>
			<result name="login">/H-ui.admin/login.jsp</result>
			<result name="findAllSuccess">/H-ui.admin/user_list.jsp</result>
			<result name="addUserUI">/H-ui.admin/user_addUser.jsp</result>
			<result name="addUserSuccess" type="redirectAction">/user_findAll.action
			</result>
			<result name="deleteUserSuccess" type="redirectAction">/user_findAll.action
			</result>
			
			<result name="editUserSuccess" type="redirectAction">/user_findAll.action
			</result>
			
			<result name="editUI">/H-ui.admin/user_edit.jsp</result>
			
			<result name="userRoleSuccess">/H-ui.admin/user_role_list.jsp</result>
		</action>
		<!-- 配置商品:MdseAction -->
		<action name="mdse_*" class="MdseAction" method="{1}">
			<result name="findAllSuccess">/H-ui.admin/mdse_list.jsp</result>
			<result name="saveUISuccess">/H-ui.admin/mdse_add.jsp</result>
			<result name="saveMdseSuccess" type="redirectAction">/mdse_findAll.action
			</result>
			<result name="deleteMdseSuccess" type="redirectAction">/mdse_findAll.action
			</result>
			<result name="editUI">/H-ui.admin/mdse_edit.jsp</result>
			<result name="editMdseSuccess" type="redirectAction">/mdse_findAll.action
			</result>
			<result name="SalesM1dse">/H-ui.admin/mdse_sales_list.jsp</result>
			<interceptor-ref name="defaultStack">
				<param name="fileUpload.maximumSize">2097152</param>
				<param name="fileUpload.allowedExtensions">.jpg,.jpeg,.png</param>
			</interceptor-ref>
		</action>
		<!-- 配置分类:SortAction -->
		<action name="sort_*" class="SortAction" method="{1}">
			<result name="findAllSuccess">/H-ui.admin/mdse_sort_list.jsp</result>
			<result name="saveUISuccess">/H-ui.admin/mdse_sort_add.jsp</result>
			<result name="saveMdSuccess" type="redirectAction">/sort_findAll.action
			</result>
			<result name="deleteSortSuccess" type="redirectAction">/sort_findAll.action
			</result>
		</action>

		<!-- 配置订单:OrderAction -->
		<action name="order_*" class="OrderAction" method="{1}">
			<result name="findAllSuccess">/H-ui.admin/order_list.jsp</result>
			<result name="orderDetailsSuccess">/H-ui.admin/order_detail.jsp</result>
			<result name="editOrderSuccess" type="redirectAction">/order_findAll.action
			</result>
			<result name="createUISuccess">/H-ui.admin/order_createOrder.jsp</result>
			<result name="createOrderSuccess" type="redirectAction">/order_findAll.action
			</result>
		</action>

		<!-- 配置订单详情:OrderDetailAction -->
		<action name="orderDetail_*" class="OrderDetailAction"
			method="{1}">
			<result name="findAllSuccess">/H-ui.admin/orderDetail_list.jsp</result>
			<result name="DetailsUISuccess">/H-ui.admin/order_detail.jsp</result>
			<result name="mdseDetailSuccess">/H-ui.admin/mdse_detail.jsp</result>
			<result name="deleteOrderSuccess" type="redirectAction">/orderDetail_findAll.action
			</result>
		</action>
		<!-- 配置用户角色:RoleAction -->
		<action name="admin_*" class="RoleAction"
			method="{1}">
				<result name="findAllSuccess">/H-ui.admin/admin_list.jsp</result>
		</action>
	</package>
</struts>