<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    <hibernate-mapping>
    	<class name="com.mirror.domain.OrderDetail" table="order_detail">
    		<id name="order_detail_id" column="order_detail_id">
    			<generator class="native"/>
    		</id>
    		
    		<property name="order_detail_number" column="order_detail_number"/>
    		<property name="due_money" column="due_money"/>
    		<property name="actual_money" column="actual_money"/>
    		<property name="order_addtime" column="order_addtime"/>
    		<property name="pay_status" column="pay_status"/>
    		<property name="issue_cargo_status" column="issue_cargo_status"/>
    		<property name="put_cargo_status" column="put_cargo_status"/>
    		<property name="pay_time" column="pay_time"/>
    		<property name="issue_cargo_time" column="issue_cargo_time"/>
    		<property name="put_cargo_time" column="put_cargo_time"/>
    		<property name="order_status" column="order_status"/>
    		<property name="order_payment" column="order_payment"/>
    		<property name="order_mome" column="order_mome"/>
    		<property name="order_logisticscorp" column="order_logisticscorp"/>
    		<property name="order_logistics_odd" column="order_logistics_odd"/>
    		
    		<set name="order" inverse="true" cascade="delete">
    			<key column="order_orderdetail_id"></key>
    			<one-to-many class="com.mirror.domain.Order" />
    		</set>
    		<many-to-one name="user" class="com.mirror.domain.User" column="order_detail_user_id"></many-to-one>
    	</class>
    	
    </hibernate-mapping>