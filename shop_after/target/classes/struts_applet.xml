<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
    "http://struts.apache.org/dtds/struts-2.5.dtd"><!-- 注意版本 -->
<struts>
	<!-- 小程序商城前端Action配置 -->
	<package name="applet" extends="struts-default,json-default" namespace="/"
		strict-method-invocation="false">
		<!-- 配置全局JSON返回 -->
		<global-results>
			<result type="json" name="success">
				<param name="root">
					jsonRequest
				</param>
			</result>
			<result type="json" name="login">
				<param name="root">
					jsonRequest
				</param>
			</result>
		</global-results>
		
		<!-- 配置商品:AppletMdseAction -->
		<action name="appletMdse_*" class="AppletMdseAction"
			method="{1}">
		</action>
		
		<!-- 配置商品分类:AppletSortAction -->
		<action name="appletSort_*" class="AppletSortAction"
			method="{1}">
		</action>
		<!-- 配置订单详情:AppletOrderAction -->
		<action name="appletOrder_*" class="AppletOrderAction"
			method="{1}">
		</action>
		<!-- 配置订单:AppletOrderDetailAction -->
		<action name="appletOrderDetail_*" class="AppletOrderDetailAction"
			method="{1}">
		</action>
		<!-- 配置用户:AppletOrderAction -->
		<action name="appletUser_*" class="AppletUserAction"
			method="{1}">
		</action>
	</package>
</struts>